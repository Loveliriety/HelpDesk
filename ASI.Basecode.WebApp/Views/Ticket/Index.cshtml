@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Ticket Management";
    string theme = HttpContextAccessor.HttpContext.Session.GetString("Theme") ?? "light";
